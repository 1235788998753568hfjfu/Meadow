{
  "multipart": [
    {
      "when": {
        "facing": "north"
      },
      "apply": {
        "model": "meadow:block/table_top"
      }
    },
    {
      "when": {
        "facing": "east"
      },
      "apply": {
        "model": "meadow:block/table_top",
        "y": 90
      }
    },
    {
      "when": {
        "facing": "south"
      },
      "apply": {
        "model": "meadow:block/table_top",
        "y": 180
      }
    },
    {
      "when": {
        "facing": "west"
      },
      "apply": {
        "model": "meadow:block/table_top",
        "y": 270
      }
    },
    {
      "when": {
        "leg_1": "true"
      },
      "apply": {
        "model": "meadow:block/table_leg",
        "uvlock": true
      }
    },
    {
      "when": {
        "leg_2": "true"
      },
      "apply": {
        "model": "meadow:block/table_leg",
        "y": 90,
        "uvlock": true
      }
    },
    {
      "when": {
        "leg_3": "true"
      },
      "apply": {
        "model": "meadow:block/table_leg",
        "y": 180,
        "uvlock": true
      }
    },
    {
      "when": {
        "leg_4": "true"
      },
      "apply": {
        "model": "meadow:block/table_leg",
        "y": 270,
        "uvlock": true
      }
    }
  ]
}